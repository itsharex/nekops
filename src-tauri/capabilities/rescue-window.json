{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "rescue-window",
  "description": "additional permissions for rescue window only",
  "context": "local",
  "windows": [
    "nekopsrescue"
  ],
  "permissions": [
    "core:window:allow-destroy",
    "clipboard-manager:allow-write-text",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "embedded/bin/websockify",
          "args": [
            "-t",
            {
              "validator": "\\S+"
            }
          ],
          "sidecar": true
        }
      ]
    },
    "shell:allow-stdin-write",
    "shell:allow-kill"
  ],
  "platforms": [
    "linux",
    "macOS",
    "windows",
    "android",
    "iOS"
  ]
}
