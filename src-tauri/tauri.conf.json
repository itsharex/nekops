{
  "productName": "Nekops",
  "version": "0.8.0",
  "identifier": "com.candinya.nekops",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "embedded/bin/websockify",
      "embedded/bin/pipessh"
    ],
    "macOS": {
      "signingIdentity": "-"
    },
    "createUpdaterArtifacts": true
  },
  "app": {
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src": "ipc: http://ipc.localhost",
        "img-src": "'self' data: asset: http://asset.localhost",
        "style-src": "'unsafe-inline' 'self'"
      },
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "Nekops",
        "width": 1200,
        "height": 800
      }
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEI5NUMwMDgyMkM3RUM0NTcKUldSWHhINHNnZ0JjdWRzcjV3dElnT0I0NmxrTnhYYWV5SHRkdUhyYjZoV3M3U1NVYVFaNnJuc0gK",
      "endpoints": [
        "https://release.nekops.app/update.json"
      ]
    }
  }
}
